{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "Node",
        "jsx": "preserve",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "types": ["vite/client", "node"],
        "typeRoots": ["node_modules/@types"],
        "lib": ["ESNext"],
      "allowSyntheticDefaultImports": true
    }
}
