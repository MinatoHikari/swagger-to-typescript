{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "/@/*": ["./src/*"],
            "#preload": ["../preload/src/index"]
        },
        "lib": ["ESNext", "dom", "dom.iterable"]
    },

    "include": [
        "src/**/*.vue",
        "src/**/*.ts",
        "src/**/*.tsx",
        "types/**/*.d.ts",
        "../../types/**/*.d.ts",
        "../preload/types/electron-api.d.ts"
    ]
}
